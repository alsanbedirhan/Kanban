@model Kanban.Services.ServiceResult<InviteStatus>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>kanflow</title>

    <meta name="description" content="Manage projects effortlessly with Kanflow. Organize tasks, collaborate with your team, and boost productivity. The fast, secure, and free Kanban tool." />
    <meta name="keywords" content="kanban, project management, task tracking, agile, scrum, workflow, productivity, kanflow, bedirhan alsan, todo list" />
    <meta name="author" content="Bedirhan Alsan" />
    <meta name="robots" content="index, follow" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.kanflow.online/" />
    <meta property="og:title" content="Kanflow - Streamline Your Workflow" />
    <meta property="og:description" content="The modern way to manage tasks. Create boards, invite your team, and get things done. Simple, fast, and effective." />
    <meta property="og:image" content="https://www.kanflow.online/logo.png" />
    <meta property="og:image:alt" content="Kanflow Dashboard Preview" />
    <meta property="og:site_name" content="Kanflow" />
    <meta property="og:locale" content="en_US" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
</head>
<body>

    <button class="menu-toggle" onclick="toggleSidebar()">☰</button>
    <div class="sidebar-overlay" id="sidebarOverlay" onclick="toggleSidebar()"></div>

    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h2>kanflow.online</h2>
            <button class="close-sidebar-btn" onclick="toggleSidebar()">×</button>
        </div>

        <div class="sidebar-content">
            <div style="padding: 0 20px;">
                <button class="add-board-btn" onclick="openNewBoardModal()">
                    + New Board
                </button>
            </div>

            <div class="sidebar-section-title">📋 My Boards</div>
            <ul class="board-list" id="boardList"></ul>

            <div class="sidebar-section-title">📋 Shared With Me</div>
            <ul class="board-list" id="sharedBoardList"></ul>
        </div>

        <div class="sidebar-footer" id="authSection">
        </div>

        <div class="developer-footer" style="padding: 15px; text-align: center; font-size: 0.85rem; border-top: 1px solid #eee; color: #666;">
            Developed by <a href="https://bedirhanalsan.com" target="_blank" style="color: #333; text-decoration: none; font-weight: bold;">Bedirhan Alşan</a>
        </div>
    </div>

    <div class="container">
        <div class="header" id="kanflowheader">
            <h1 style="display: flex; align-items: center;" id="kanflowheadertitle">
                <img src="/favicon.svg" alt="Kanflow Logo" style="height: 36px; width: auto;">
                kanflow
            </h1>
            <div id="authHeaderArea"></div>
        </div>

        <div class="header secondary-header" id="boardHeader" style="margin-top:0px;display:none;">
            <h1 id="boardHeaderTitle"></h1>
            <button class="btn btn-primary" id="btnNewColumn" onclick="openNewColumnModal()">+ New Column</button>
        </div>
        <div class="board" id="board">
        </div>
    </div>

    <form onsubmit="handleLogin(); return false;" class="modal" id="loginModal">
        <div class="modal-content">
            <h3>Login</h3><br>
            <div class="form-group">
                <label>Email</label>
                <input type="email" id="loginEmail" placeholder="your@email.com">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" id="loginPassword" placeholder="••••••••">
                <button type="button" tabindex="-1" aria-label="Show/Hide Password" class="toggle-password" data-target="loginPassword">🙈</button>
            </div>
            <div style="text-align:right;">
                <button type="button" class="btn btn-secondary" onclick="closeLoginModal()">Cancel</button>
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            <div style="margin-top:20px; text-align:center; font-size:14px;">
                Don’t have an account?
                <button type="button" class="btn-link" onclick="switchToRegister()">Register</button>
            </div>
        </div>
    </form>

    <form onsubmit="handleRegister(); return false;" class="modal" id="registerModal">
        <div class="modal-content">
            <h3>Register</h3><br>
            <div class="form-group">
                <label>Full Name</label>
                <input type="text" id="registerFullName" placeholder="Your full name">
            </div>
            <div class="form-group">
                <label>Email</label>
                <input type="email" id="registerEmail" placeholder="your@email.com">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" id="registerPassword" placeholder="••••••••">
                <button type="button" tabindex="-1" aria-label="Show/Hide Password" class="toggle-password" data-target="registerPassword">🙈</button>
            </div>
            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" id="registerConfirmPassword" placeholder="••••••••">
                <button type="button" tabindex="-1" aria-label="Show/Hide Password" class="toggle-password" data-target="registerConfirmPassword">🙈</button>
            </div>
            <div style="display: flex; align-items: flex-start; gap: 10px; margin-top: 15px; margin-bottom: 15px;">
                <input type="checkbox" id="registerAgreement" style="width: 20px; height: 20px; cursor: pointer; margin-top: 2px;">
                <label for="registerAgreement" style="font-size: 13px; color: #4a5568; cursor: pointer;">
                    I have read and agree to the
                    <a href="#" onclick="showPrivacyPolicy(event)" style="color: var(--primary-color); text-decoration: underline;">Privacy Policy</a> and
                    <a href="#" onclick="showUserAgreement(event)" style="color: var(--primary-color); text-decoration: underline;">User Agreement</a>.
                </label>
            </div>

            <div style="text-align:right;">
                <button type="button" class="btn btn-secondary" onclick="closeRegisterModal()">Cancel</button>
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            <div style="margin-top:20px; text-align:center; font-size:14px;">
                Already have an account?
                <button type="button" class="btn-link" onclick="switchToLogin()">Login</button>
            </div>
        </div>
    </form>

    <div class="modal" id="avatarModal">
        <div class="modal-content" style="text-align:center; max-width: 500px;">
            <h3>Select Your Look</h3>
            <p style="color:#666; margin-bottom:20px;">Choose an avatar to personalize your profile.</p>

            <div id="avatarSelectionArea">
            </div>

            <button class="btn btn-primary" style="width:100%; margin-top:20px;" onclick="saveMyAvatar()">
                Let's Go!
            </button>
        </div>
    </div>

    <div id="loadingOverlay" class="loading-overlay">
        <div class="spinner"></div>
        <span>Just a moment...</span>
    </div>

    <template id="otpTemplate">
        <div id="otp-inputs" class="otp-container">
            <input type="text" class="otp-field" maxlength="1">
            <input type="text" class="otp-field" maxlength="1">
            <input type="text" class="otp-field" maxlength="1">
            <input type="text" class="otp-field" maxlength="1">
            <input type="text" class="otp-field" maxlength="1">
            <input type="text" class="otp-field" maxlength="1">
        </div>
    </template>

    <button id="quickNoteBtn" class="quick-note-toggle" onclick="toggleQuickNote()">
        📝
    </button>

    <div id="quickNoteContainer" class="quick-note-wrapper">
        <div class="quick-note-header">
            <span>Quick Notes</span>
            <div style="display:flex; gap:10px; align-items:center;">
                <span id="saveStatus" style="font-size:10px; color:#666; opacity:0; transition:opacity 0.3s;">Saved ✅</span>

                <span id="btnTrash" style="cursor:pointer;" onclick="clearQuickNote()">🗑️</span>
                <span style="cursor:pointer;" onclick="toggleQuickNote()">✕</span>
            </div>
        </div>
        <textarea id="quickNoteArea" placeholder="Write here..."></textarea>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script>
        window.SERVER_INVITE_STATUS = '@Model.Data.ToString()';

        window.SERVER_MESSAGE = '@Model.ErrorMessage';
    </script>
</body>
</html>